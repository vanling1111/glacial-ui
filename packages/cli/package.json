{
  "name": "@glacial-ui/cli",
  "version": "0.0.1",
  "description": "CLI for adding Glacial UI components to your project",
  "type": "module",
  "license": "MIT",
  "author": "vanling1111",
  "bin": {
    "glacial-ui": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "default": "./dist/registry/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "default": "./dist/mcp/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@unovue/detypes": "^0.8.5",
    "@vue/compiler-sfc": "^3.5.13",
    "c12": "^3.3.2",
    "commander": "^14.0.2",
    "consola": "^3.4.2",
    "dedent": "^1.7.0",
    "deepmerge": "^4.3.1",
    "diff": "^8.0.2",
    "fs-extra": "^11.3.2",
    "fuzzysort": "^3.1.0",
    "get-tsconfig": "^4.13.0",
    "magic-string": "^0.30.21",
    "nypm": "^0.6.2",
    "ofetch": "^1.5.1",
    "ora": "^9.0.0",
    "pathe": "^2.0.3",
    "postcss": "^8.5.6",
    "prompts": "^2.4.2",
    "reka-ui": "^2.1.0",
    "semver": "^7.7.3",
    "stringify-object": "^6.0.0",
    "tailwindcss": "^4.1.17",
    "tinyexec": "^1.0.2",
    "tinyglobby": "^0.2.14",
    "ts-morph": "^27.0.2",
    "undici": "^7.16.0",
    "vue-metamorph": "^3.3.3",
    "zod": "^3.24.4",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.19.1",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.7.1",
    "@types/stringify-object": "^4.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "glacial-ui",
    "vue",
    "components",
    "cli",
    "tailwindcss",
    "radix-vue"
  ]
}
